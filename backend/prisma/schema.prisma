generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  rides     Ride[]

  @@map("customers")
}

model Driver {
  id                String   @id @default(uuid())
  name              String
  description       String
  vehicle           String
  rating            Decimal
  comment           String
  pricePerKilometer Decimal  @map("price_per_kilometer")
  minimumKilometers Int      @map("minimum_kilometers")
  createdAt         DateTime @default(now()) @map("created_at")
  rides             Ride[]

  @@map("drivers")
}

model Ride {
  id                   String   @id @default(uuid())
  originLatitude       Decimal  @map("origin_latitude")
  originLongitude      Decimal  @map("origin_longitude")
  destinationLatitude  Decimal  @map("destination_latitude")
  destinationLongitude Decimal  @map("destination_longitude")
  distanceInMeters     Decimal  @map("distance_in_meters")
  durationInSeconds    Int      @map("duration_in_seconds")
  value                Decimal
  customerId           String   @map("customer_id")
  driverId             String   @map("driver_id")
  createdAt            DateTime @default(now()) @map("created_at")

  customer Customer @relation(fields: [customerId], references: [id])
  driver   Driver   @relation(fields: [driverId], references: [id])

  @@map("rides")
}
